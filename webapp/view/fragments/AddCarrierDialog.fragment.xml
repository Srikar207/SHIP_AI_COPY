<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:ui="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core" >
    <Dialog
        id="idAddCarrierDialog"
        showHeader="false"
        contentWidth="90%"
        contentHeight="50%" >
        <Toolbar class="whiteBackgroundAddCarrier sapUiSmallMarginBottom">
            <Title text="Add Carrier"></Title>
            <ToolbarSpacer ></ToolbarSpacer>
                <Button icon="sap-icon://decline" press="AddCarrierCancelDialog" class="Decline_Btn ship-now-decline_btn btnInnerFocus" type="Transparent" ></Button>
        </Toolbar>
        <HBox alignContent="Center" >
												<HBox height="4.5rem" width="100%" class="  packScreenPadding" alignItems="Center" >
													<VBox >
														<Label text="Location ID / Location Name"  />
														<ComboBox class="create-ship-req_input sapUiLargeMarginEnd" width="auto" enabled="{}" items="{eshipjetModel>/LocationsData}" selectedKey="{eshipjetModel>/CarrierCatalogLocations}" selectionChange=""  >
															 <core:Item key="{eshipjetModel>Plant}" text="{eshipjetModel>Plant} - {eshipjetModel>PlantName}" />
														</ComboBox>
													</VBox>
													<VBox >
														<Label text="Carrier Name" />
														<Input value="{eshipjetModel>/CarrierName}" enabled="{}" class="create-ship-req_input sapUiLargeMarginEnd"  width="auto" />

													</VBox>
													<VBox >
														<Label text="Carrier ID" />
															<Input  value="{eshipjetModel>/carrierId}" enabled="{}" class="create-ship-req_input sapUiLargeMarginEnd"  width="auto" />
													</VBox>
                                                    <VBox >
														<Label text="ERP Carrier ID" />
															<Input value="{eshipjetModel>/erpCarrierId}" enabled="{}" class="create-ship-req_input sapUiLargeMarginEnd"  width="auto" />
													</VBox>
                                                    <VBox>
                                                        <Label text="Carrier Type" />
                                                        <ComboBox
                                                            class="create-ship-req_input sapUiLargeMarginEnd"
                                                            width="auto"
                                                            enabled="true"
                                                            items="{eshipjetModel>/carrierTypeList}"
                                                            selectionChange="onCarrierCatalogTypeChange"
                                                            selectedKey="{eshipjetModel>/CarrierType}">
                                                            <core:Item key="{eshipjetModel>TypeKey}" text="{eshipjetModel>TypeText}" />
                                                        </ComboBox>
                                                    </VBox>

													<VBox>
                                                        <Label text="Carrier Coverage" />
                                                        <ComboBox 
                                                            class="create-ship-req_input sapUiLargeMarginEnd"
                                                            items="{eshipjetModel>/carrierCoverageList}"
                                                            selectedKey="{eshipjetModel>/CarrierCoverage}">
                                                            <core:Item key="{eshipjetModel>CoverageKey}" text="{eshipjetModel>CoverageText}" />
                                                        </ComboBox>
                                                    </VBox>

                                                   <VBox>
                                                    <Label text="Connection Type" />
                                                    <ComboBox
                                                        class="create-ship-req_input sapUiLargeMarginEnd"
                                                        width="auto"
                                                        enabled="{}"
                                                        selectedKey="{eshipjetModel>/connectionType1}"
                                                        selectionChange="onShopNowConnectionTypeChange1">
                                                        <core:Item key="API" text="API" />
                                                        <core:Item key="EDI" text="EDI" />
                                                        <core:Item key="FTP" text="FTP" />
                                                        <core:Item key="File" text="File" />
                                                    </ComboBox>
                                                </VBox>
													<!-- <VBox >
														<Label text="Color Picker" class="create-ship-req_input sapUiLargeMarginEnd"/>
														<Button press="onOpenColorPicker" class="create-ship-req_input sapUiLargeMarginEnd"/>
													</VBox> -->
                                                    <VBox >
														<Label text="Status" />
														<Switch 
                                                            state="{= ${eshipjetModel>IS_ACTIVE} === true || ${eshipjetModel>IS_ACTIVE} === 'X' || ${eshipjetModel>IS_ACTIVE} === '1' }"
                                                            class="greenSwitch btnInnerFocus" 
                                                            change="onStatusChange" />

													</VBox>
												</HBox>
                                                </HBox>
                                    <Table inset="false" items="{eshipjetModel>/addCrrierDialogItems}">
                                    <columns>
                                        <Column width="auto">
                                            <Text text="Service Name" />
                                        </Column>
                                        <Column width="auto">
                                            <Text text="ERP Service ID" />
                                        </Column>
                                        <Column width="auto">
                                            <Text text="Service Code" />
                                        </Column>
                                        <Column width="auto">
                                            <Text text="Service Coverage" />
                                        </Column>
                                        <!-- <Column width="auto" class="sapUiSmallMarginTop">
                                            <Text text="Connection Type" />
                                        </Column> -->
                                        <Column width="auto" class="sapUiSmallMarginTop">
                                            <Text text="Status" />
                                        </Column>
                                        <Column width="auto">
                                            <HBox>
                                                <Text text="Actions" class="sapUiTinyMarginTop sapUiLargeMarginEnd" />
                                                <Button icon="sap-icon://add" type="Transparent" class="" press="onAddCarrierDialogPlusPress"></Button>
                                            </HBox>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem vAlign="Middle">
                                            <cells>
                                                <Input class="create-ship-req_input" placeholder="Service Name" 
                                                    value="{eshipjetModel>ServDesc}"></Input>
                                                
                                                <Input class=" create-ship-req_input" 
                                                    value="{eshipjetModel>ErpServId}"></Input>
                                                
                                                <Input class=" create-ship-req_input" placeholder="Service Code"
                                                    value="{eshipjetModel>ServCode}" ></Input>
                                                
                                                <ComboBox selectedKey="{eshipjetModel>ServiceCoverage}" class=" create-ship-req_input">
                                                    <core:Item key="Domestic" text="Domestic" />
                                                    <core:Item key="International" text="International" />
                                                    <core:Item key="both" text="Both" />
                                                </ComboBox>
                                                
                                                <!-- <ComboBox selectedKey="{eshipjetModel>ConnectionType}" class=" create-ship-req_input">
                                                    <core:Item key="API" text="API" />
                                                    <core:Item key="EDI" text="EDI" />
                                                    <core:Item key="FTP" text="FTP" />
                                                    <core:Item key="File" text="File" />
                                                </ComboBox> -->
                                                
                                                <Switch  state="{eshipjetModel>IsActive}" class="greenSwitch btnInnerFocus">
                                                    <layoutData>
                                                        <FlexItemData growFactor="1" />
                                                    </layoutData>
                                                </Switch>
                                                
                                                <Button icon="sap-icon://delete" type="Negative" 
                                                        press="onAddCrrierDialogDeleteIconPress"></Button>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                                    <footer>  
       <!-- <OverflowToolbar> -->
    <Toolbar height="3rem">
        <Button
            text="Cancel"
            press="AddCarrierCancelDialog"
            class="AddCarrierCancel btnInnerFocus sapUiTinyMarginBottom"
            type="Transparent" />

      <ToolbarSpacer ></ToolbarSpacer>

        <!-- Save button - only visible in Add mode -->
        <Button
            text="Save"
            press="AddCarrierCatalogSaveDialog"
            class="addCarrierSaveBtnStyle btnInnerFocus sapUiTinyMarginBottom"
            width="auto"
            visible="{eshipjetModel>/showCarrierCatalogSaveBtn}" />

        <!-- Update button - only visible in Edit mode -->
        <Button
            text="Update"
            press="AddCarrierCatalogupdateDialog"
            class="addCarrierSaveBtnStyle btnInnerFocus sapUiTinyMarginBottom"
            width="auto" 
            visible="{eshipjetModel>/showCarrierCatalogUpdateBtn}" />
    </Toolbar>
<!-- </OverflowToolbar> -->
</footer>

    </Dialog>
</core:FragmentDefinition>