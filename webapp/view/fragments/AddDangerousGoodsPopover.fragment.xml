<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    height="100%"
>
    <Popover
        id="idAddDangerousGoodsPopover"
        placement="Bottom"
        contentHeight="100%"
        showHeader="false"
        class="rightSidePopoverGare">
        <!-- Custom Header -->
        <customHeader>
            <Toolbar>
                <!-- Title -->
                <Title text="Add Dangerous Goods" class="sapUiSmallMarginBottom" visible="true" />
                 <Title text="Update Dangerous Goods" class="sapUiSmallMarginBottom" visible="false" />
                <!-- Spacer to push close button to the right -->
                <ToolbarSpacer />

                <!-- Close Button -->
                <Button
                    icon="sap-icon://decline"
                    class="Decline_Btn ship-now-decline_btn sapUiLargeMarginBottom"
                    press="AddDangerousGoodsClosePress" />
            </Toolbar>
        </customHeader>
        <footer>
            <OverflowToolbar class="p-sidebar-header">
                <Button
                    text="Cancel"
                    class="Cancel-req-toolbar__button sapUiTinyMarginBottom"
                    press="AddDangerousGoodsCancelPopover"
                />
                <ToolbarSpacer />
                <Button
                    type=""
                    class="ship-req-toolbar__button sapUiTinyMarginBottom"
                    text="Save"
                    press="AddDangerousGoodsSelectPopover"
                />
            </OverflowToolbar>
        </footer>
        <content>
           	<f:SimpleForm editable="true"
                            class="customSimpleFormShadow"
                            width="auto"
							  layout="ColumnLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2">
					<f:content>
                        <Label text="UN No" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Transport Mode" />  
			            <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Select">
                         </ComboBox>
                       
                        <Label ></Label>
                        <Button text="Search" class="ship-req-toolbar__button sapUiLargeMarginBottom" width="10rem"></Button>

                         <Label text="ERG Guide Number" />
                         <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Labels Required" />  
			            <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Packing Group" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                         <Label text="Proper Shipping Name" />
                         <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Cargo Aircraft Only Quantity" />  
			            <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Do Not Print PSN Reference Only" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                         <Label text="Exemption Required" />
                         <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Limited Quantity Max Net Qty Per Package" />  
			            <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Limited Quantity" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>


                         <Label text="Packaging Exceptions" />
                         <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Passenger  Cargo Aircraft Packing Instructions" />  
			            <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Passenger  Cargo Aircraft Unit of Measure" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                         <Label text="Carrier" />
                         <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Select">
                         </ComboBox>

                        <Label text="Destination" />  
			            <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Select">
                         </ComboBox>

                        <Label text="Hazard ID" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Hazard Class" />  
			            <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Additional Info" />
                        <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Select">
                         </ComboBox>

                        <Label text="Passenger  Cargo Max Net Qty" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                         <Label text="Canada Permitted" />
                         <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Select">
                         </ComboBox>

                        <Label text="Cargo Aircraft Only Unit of Measure" />  
			            <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Select">
                         </ComboBox>

                        <Label text="Excepted Quantity Code" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Forbidden" />  
			            <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                        <Label text="Limited Quantity Packing Instructions" />
                        <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Select">
                         </ComboBox>

                        <Label text="Limited Quantity Unit of Measure" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                         <Label text="Packaging Non-Bulk" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                         <Label text="Passenger  Cargo Aircraft Quantity" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>

                         <Label text="Technical Info Flag" />
                        <Input class="sapUiSmallMarginBottom create-ship-req_input"></Input>
					</f:content>
				</f:SimpleForm>
        </content>
    </Popover>
</core:FragmentDefinition>
