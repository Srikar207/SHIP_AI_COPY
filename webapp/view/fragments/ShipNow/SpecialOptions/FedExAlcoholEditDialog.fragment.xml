<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form">

    <Dialog id="_IDGenAlcoholEditDialog"
            title="Alcohol"
            contentWidth="60vh"
            contentHeight="95%"
            verticalScrolling="false"
            horizontalScrolling="false"
            class="rightSideDialogSpecialOptions">
        
       
            <Toolbar>
                <Title text="Alcohol" />
                <ToolbarSpacer />
                <Button icon="sap-icon://decline" press="onCloseAlcoholDialog" />
            </Toolbar>
      

        <content>
            <f:SimpleForm editable="true"
                          class="customSimpleFormShadow"
                          width="auto"
                          layout="ColumnLayout"
                          columnsM="2"
                          columnsL="2"
                          columnsXL="2">
                <f:content>
                    <Label text="Recipient Type" />
                    <Input   class="sapUiSmallMarginBottom create-ship-req_input" />
                    
                    <Label text="Shipper Agreement Type" />
                    <Input   class="sapUiSmallMarginBottom create-ship-req_input" />
                    
                    
                </f:content>
            </f:SimpleForm>
        </content>

        <footer>
            <OverflowToolbar class="sapMPopoverFooter1">
                <Button text="Cancel" press="onCloseAlcoholDialog" />
                <ToolbarSpacer />
                <Button text="Save" type="Emphasized" press="onSaveAlcoholData" />
            </OverflowToolbar>
        </footer>

    </Dialog>
</core:FragmentDefinition>
