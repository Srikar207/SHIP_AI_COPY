<core:FragmentDefinition
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">

    <Dialog id="_IDGenFedExPendingShipmentDetailEditDialog"
            title="ETD Detail"
            contentWidth="60vh"
            contentHeight="95%"
            verticalScrolling="false"
            horizontalScrolling="false"
            class="rightSideDialogSpecialOptions">
            
            <Toolbar>
                <Title text="Pending Shipment Detail" />
                <ToolbarSpacer />
                <Button icon="sap-icon://decline" press="onCloseFedexPendingShipmentDetailEditDialog" />
            </Toolbar>

        <content>
            <f:SimpleForm editable="true"
                          class="customSimpleFormShadow"
                          width="auto"
                          layout="ColumnLayout"
                          columnsM="2"
                          columnsL="2"
                          columnsXL="2">
                <f:content>
                   <!-- <Toolbar ariaLabelledBy="idShipFrom" class="customLine" >
						<Button icon="sap-icon://customer-briefing" id="idShipFrggomAddressBtn" />
                        <Title id="idShipFromuu" text="Address" />
					</Toolbar> -->
                    <Label text="Email" />
                    <Input class="sapUiSmallMarginBottom create-ship-req_input" />      
                    <Label text="Email Address" />
                    <Input class="sapUiSmallMarginBottom create-ship-req_input" />
                    <Label text="Locale" />
                    <Input  class="sapUiSmallMarginBottom create-ship-req_input" />
                     <Label text="Document Type" />
                    <Input  class="sapUiSmallMarginBottom create-ship-req_input" />
                     <Label text="Description" />
                    <Input  class="sapUiSmallMarginBottom create-ship-req_input" />
                    <Label text="Expiration TimeStamp" />
                    <DatePicker class="sapUiSmallMarginBottom create-ship-req_input" ></DatePicker>

                     <Label text="Allow Notifications" />
                    <Input class="sapUiSmallMarginBottom create-ship-req_input" />      
                    <Label text="Role" />
                    <Input class="sapUiSmallMarginBottom create-ship-req_input" />
                    <Label text="Message" />
                    <Input  class="sapUiSmallMarginBottom create-ship-req_input" />
                     <Label text="Document Reference" />
                    <Input  class="sapUiSmallMarginBottom create-ship-req_input" />
                     <Label text="Document Id" />
                    <Input  class="sapUiSmallMarginBottom create-ship-req_input" />
        
                     
                </f:content>
            </f:SimpleForm>
        </content>

        <footer>
            <OverflowToolbar class="sapMPopoverFooter1">
                <Button text="Cancel" press="onCloseFedexPendingShipmentDetailEditDialog" />
                <ToolbarSpacer />
                <Button text="Save" type="Emphasized" press="onCloseFedexPendingShipmentDetailEditDialog" />
            </OverflowToolbar>
        </footer>

    </Dialog>
</core:FragmentDefinition>
