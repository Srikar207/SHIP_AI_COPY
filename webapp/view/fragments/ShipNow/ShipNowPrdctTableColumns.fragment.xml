<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover  contentWidth="15%" placement="Auto" contentHeight="30%" showArrow="false" class="whiteBackgroundColumnConfig sapUiTinyMarginEnd packScreenPadding" >
		<customHeader>
			<VBox >
				<Toolbar class="toolbarbottomborder">
					<Title  class="sapUiTinyMarginBegin sapUiTinyMarginTop" text="Columns"></Title>
					<ToolbarSpacer ></ToolbarSpacer>					
					<Button icon="sap-icon://decline" press="onShipNowPrdColSelectClosePress" type="Transparent" class="Decline_Btn ship-now-decline_btn" ></Button>
				</Toolbar>
				<SearchField placeholder="Search Columns" class="sapUiSmallMarginEnd sapUiTinyMarginBottom columnConfigSearch" liveChange="onShipNowPrdColNameSearch"></SearchField>
			</VBox>
		</customHeader>
		<content>
        <Table	id="myShipNowPrdColumnSelectId" mode="MultiSelect" items="{path : 'eshipjetModel>/ShipNowProductsTableColumns'}" >
		<ColumnListItem id="_IDGenShipNowPrdColumnListItem1" vAlign="Middle">
			<cells>				
				<Text text="{eshipjetModel>label}" />				
			</cells>
		</ColumnListItem>
		<columns>
			<Column >
				<header>
					<Text text="Select All" />
				</header>
			</Column>			
		</columns>
        </Table>
        </content>
        <footer>
            <Toolbar class="whiteBackground" >
                <ToolbarSpacer />
                <Button text="Apply" press="onShipNowPrdColSelectOkPress" type="Ghost" class="Ship-Now-toolbar1__button_green removeBtnOutline saveBtn sapUiTinyMargin sapUiLargeMarginEnd" ></Button>               
            </Toolbar>
        </footer>      
	</Popover>   
</core:FragmentDefinition>