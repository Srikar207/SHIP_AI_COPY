<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover id="trackTraceColumnsPopover" contentWidth="20%" contentHeight="40%" placement="Left" showArrow="false">
		<customHeader>
			<VBox>
				<Toolbar class="toolbarbottomborder">
					<Title class="sapUiTinyMarginBegin sapUiTinyMarginTop" text="Columns"/>
					<ToolbarSpacer/>
					<Button icon="sap-icon://decline" press="onTrackTraceColSelectClosePress" class="Decline_Btn ship-now-decline_btn"/>
				</Toolbar>
				<SearchField class="sapUiSmallMarginEnd sapUiTinyMarginBottom columnConfigSearch" placeholder="Search Columns" liveChange="onTrackTraceColNameSearch"/>
			</VBox>
		</customHeader>

		<content>
			<Table
				id="myTrackTraceColumnSelectId"
				mode="MultiSelect"
				items="{path: 'eshipjetModel>/trackTraceTableData/trackTraceColumns'}">
				<columns>
					<Column>
						<header>
							<Text text="Select All"/>
						</header>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{eshipjetModel>label}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>

		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Apply" type="Emphasized" press="onTrackTraceColSelectOkPress"/>
			</Toolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>
