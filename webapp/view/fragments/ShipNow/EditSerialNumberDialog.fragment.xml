            <ui:TreeTable
                    rows="{path:'eshipjetModel>/serialNumbersArray'}"
                    selectionMode="None"
                    enableSelectAll="false"
                    ariaLabelledBy="title"
                    class="sapUiTinyMargin" >
                <ui:extension>
                    <OverflowToolbar style="Clear">
                        <Title id="title" text="Enter/Scan Serial Numbers" level="H2"/>
                    </OverflowToolbar>
                </ui:extension>
                <ui:columns>
                    <ui:Column width="6rem">
                        <Label text="No."/>
                        <ui:template>
                            <Text text="{eshipjetModel>rowCount}" wrapping="false" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column width="auto">
                        <Label text="Serial Numbers"/>
                        <ui:template>
                            <Input text="{eshipjetModel>serialNumber}" wrapping="false" />
                        </ui:template>
                    </ui:Column>
                </ui:columns>
            </ui:TreeTable>
    </FlexBox>

    <FlexBox width="48%" >
            <Table
                inset="false"
                items="{}"
                class="sapUiTinyMargin" >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="Already Entered" level="H2"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        width="3rem" >
                        <Text text="#" />
                    </Column>
                    <Column
                        width="auto" >
                        <Text text="Item No" />
                    </Column>
                    <Column
                        width="auto" >
                        <Text text="Product Code" />
                    </Column>
                    <Column width="auto" >
                        <Text text="Serial Numbers" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="" />
                            <Text text="" />
                            <Text text="" />
                            <Text text="" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
    </FlexBox>

</HBox>
        </content>

        <footer>
            <OverflowToolbar class="sapMPopoverFooter1">
                <Button text="Cancel" press="onCloseEditSerialDialog" class="create-ship-req-footer1"  />
                 <Button text="Clear All" press="onCloseEditSerialDialog" class="create-ship-req-footer1" />
                 <ToolbarSpacer ></ToolbarSpacer>
                 <Button text="Confirm" press="onCloseEditSerialDialog" class="create-ship-req-footer"  />
            </OverflowToolbar>
        </footer>

    </Dialog>
</core:FragmentDefinition>
