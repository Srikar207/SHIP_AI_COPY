<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form"
    xmlns:ui="sap.ui.table" >

    <Dialog id="_IDGenEditSerialNumberDialog"
            class="sapUiSmallMargin"
            showHeader="false"
            contentWidth="70%"
            contentHeight="70%"
            verticalScrolling="false"
            horizontalScrolling="false" >
        
            <Toolbar>
                <Title text="Serial Numbers" class="sapUiSmallMarginBegin" />
                <ToolbarSpacer />
                <Button icon="sap-icon://decline" press="onCloseEditSerialDialog" class="Decline_Btn ship-now-decline_btn" type="Transparent" />
            </Toolbar>
        
        <content>
            <HBox width="100%" >
                <VBox class="sapUiSmallMargin" width="20%" >
                    <Label text="SAP Delivery Number" />
                    <Input value="{eshipjetModel>/commonValues/sapDeliveryNumber}" class="sapUiSmallMarginBottom create-ship-req_input" />
                </VBox>
                <VBox class="sapUiSmallMargin" width="80%" >
                    <HBox class="sapUiSmallMargin" width="80%" >
                        <core:Icon src="sap-icon://menu" class="sapUiTinyMarginEnd" ></core:Icon>
                        <Text text=" Serial Scan Status" ></Text>
                    </HBox>
                    <HBox class="sapUiSmallMargin" width="80%" justifyContent="SpaceBetween" >
                        <FlexBox >
                            <core:Icon src="sap-icon://multiselect-all" class="sapUiTinyMarginEnd" ></core:Icon>
                            <Text text="Total SNs: " ></Text>
                            <Text text="{eshipjetModel>/serialStatus/total}" />
                        </FlexBox>
                        
                        <FlexBox >
                            <core:Icon src="sap-icon://message-success" class="sapUiTinyMarginEnd serialgreen" ></core:Icon>
                            <Text text="Scanned:"  class="serialgreen"></Text>
                            <Text text="{eshipjetModel>/serialStatus/entered}" />
                        </FlexBox>

                        <FlexBox >
                            <core:Icon src="sap-icon://sys-cancel" class="sapUiTinyMarginEnd serialred" ></core:Icon>
                            <Text text="Remaining:" class="serialred" ></Text>
                            <Text text="{eshipjetModel>/serialStatus/remaining}" />
                        </FlexBox>
                    </HBox>
                </VBox>
              

            </HBox>
                   
                   <ProgressIndicator
    percentValue="{eshipjetModel>/serialStatus/percentage}"
    displayValue="{eshipjetModel>/serialStatus/displayText}"
    width="70%"
    height="10%"
    showValue="true"
    state="Success"
    class="serialProgressBar" />   
                    

<HBox width="100%" justifyContent="SpaceBetween" >

<FlexBox width="48%" >
