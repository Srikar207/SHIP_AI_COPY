            <ui:TreeTable
                    rows="{
                        path:'eshipjetModel>/serialDialogObject/nodes',
                        parameters:{
                            arrayNames:['nodes'],
                            numberOfExpandedLevels: 99
                        }
                    }"
                    id="idSerialDialogNodes"
                    selectionMode="None"
                    enableSelectAll="false"
                    ariaLabelledBy="title" >
                <ui:extension>
                    <OverflowToolbar style="Clear">
                        <Title id="title" text="Enter/Scan Serial Numbers" level="H2"/>
                    </OverflowToolbar>
                </ui:extension>
                <ui:columns>
                    <ui:Column width="10rem">
                        <Label text="No."/>
                        <ui:template>
                            <Text text="{eshipjetModel>id}" wrapping="false" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column width="auto">
                        <Label text="Serial Numbers"/>
                        <ui:template>
                            <!-- <Input
                                value="{eshipjetModel>serialNumber}"
                                change="onSerialNumberEntered"
                                editable="{= !${eshipjetModel>serialNumber} || ${eshipjetModel>serialNumber}.length === 0 }"/> -->
                            <Input
                                value="{eshipjetModel>serialNumber}"
                                liveChange="onSerialNumberEntered"
                                editable="{eshipjetModel>inputEditFlag}"/>
                        </ui:template>
                    </ui:Column>
                </ui:columns>
            </ui:TreeTable>
    </FlexBox>

    <FlexBox width="50%" class="shipnowcustomSimpleFormShadow" >
            <Table
                inset="false" >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="Already Entered" level="H2"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        width="3rem" >
                        <Text text="#" />
                    </Column>
                    <Column
                        width="auto" >
                        <Text text="Item No" />
                    </Column>
                    <Column
                        width="auto" >
                        <Text text="Product Code" />
                    </Column>
                    <Column width="auto" >
                        <Text text="Serial Numbers" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="" />
                            <Text text="" />
                            <Text text="" />
                            <Text text="" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
    </FlexBox>

</HBox>
        </content>

        <footer>
            <OverflowToolbar class="sapMPopoverFooter1">
                <Button text="Cancel" press="onCloseEditSerialDialog" class="serialNumberClearBtnStyle sapUiTinyMargin" />
                <Button text="Clear All" press="onClearEditSerialDialog" class="serialNumberClearBtnStyle" />
                <ToolbarSpacer ></ToolbarSpacer>
                    <Button text="Confirm" press="onPackItemsWithOutEWM" class="serialNumberConfirmBtnStyle" />
            </OverflowToolbar>
        </footer>

    </Dialog>
