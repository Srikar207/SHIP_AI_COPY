<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form"
    xmlns:ui="sap.ui.table" >

    <Dialog id="_IDGenEditSerialNumberDialog"
            class="sapUiContentPadding"
            showHeader="false"
            contentWidth="70%"
            contentHeight="70%" >
        
            <Toolbar>
                <Title text="Serial Numbers" />
                <ToolbarSpacer />
                <Button icon="sap-icon://decline" press="onCloseEditSerialDialog" class="Decline_Btn ship-now-decline_btn" type="Transparent" />
            </Toolbar>
        
        <content>
            <HBox width="100%" >
                <VBox class="sapUiSmallMargin" width="20%" >
                    <Label text="SAP Delivery Number" />
                    <Input value="{eshipjetModel>/commonValues/sapDeliveryNumber}" editable="false" class="sapUiSmallMarginBottom create-ship-req_input" />
                </VBox>
                <VBox width="80%" >
                    <HBox width="80%" class="sapUiTinyMarginTop" >
                        <core:Icon src="sap-icon://menu" class="sapUiTinyMarginEnd" ></core:Icon>
                        <Text text=" Serial Scan Status" ></Text>
                    </HBox>
                    <HBox width="80%" justifyContent="SpaceBetween" class="sapUiTinyMarginTop" >
                        <FlexBox >
                            <core:Icon src="sap-icon://multiselect-all" class="sapUiTinyMarginEnd" ></core:Icon>
                            <Text text="Total SNs: {eshipjetModel>/serialNumbersInputLength}" ></Text>
                        </FlexBox>
                        
                        <FlexBox >
                            <core:Icon src="sap-icon://message-success" class="sapUiTinyMarginEnd scannedTextStyle" ></core:Icon>
                            <Text text="Scanned: {eshipjetModel>/scannedInputsCount}" class="scannedTextStyle" ></Text>
                        </FlexBox>

                        <FlexBox >
                            <core:Icon src="sap-icon://sys-cancel" class="sapUiTinyMarginEnd remainingTextStyle" ></core:Icon>
                            <Text text="Remaining: {eshipjetModel>/emptyInputsCount}" class="remainingTextStyle" ></Text>
                        </FlexBox>
                    </HBox>

                    <ProgressIndicator
                        id="pi-with-animation"
                        class="serialNumberStatusBarHeight"
                        state="Success"
                        displayOnly="true"
                        percentValue="{eshipjetModel>/scannedStatus}"
                        showValue="true" />
                </VBox>
            </HBox>
                    
                    

<HBox width="100%" class="sapUiSmallMarginTop" >

<FlexBox width="50%" class="sapUiLargeMarginBegin shipnowcustomSimpleFormShadow" >
