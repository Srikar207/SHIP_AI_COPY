<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover 
        id="idSAPDeliveryPopover"
        showHeader="false" 
        contentWidth="auto" 
        showArrow="false"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
        placement="Bottom" 
        contentHeight="8rem" >
		<content>
        <List
            id="ProductList"
            items="{/shipNowSAPDeliveryItems}"
            mode="SingleSelectMaster"
            includeItemInSelection="true"
            selectionChange="onSAPDeliveryNoSelect" >
            <StandardListItem
                title="{SAPDeliveryItem}"
                type="Active" />
        </List>
        </content>
    </Popover>
</core:FragmentDefinition>
