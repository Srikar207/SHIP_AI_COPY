<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Popover
		contentWidth="45%"
		showHeader="false"
		id="idShipNowConsolidationFilterPopover"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<Toolbar >
			<ToolbarSpacer ></ToolbarSpacer>
				<Button icon="sap-icon://decline" press="onConsolidationFilterPopoverClosePress" class="Decline_Btn ship-now-decline_btn" ></Button>
		</Toolbar>
		
        <VBox >
		<HBox >
			<VBox class="sapUiSmallMargin" width="30%" >
			<Label text="Carrier" width="100%" />
					<ComboBox
						width="100%"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
			<VBox class="sapUiSmallMargin" width="30%" >
			<Label text="Service Name" width="100%" />
					<ComboBox
						width="100%"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
			<VBox class="sapUiSmallMargin" width="30%" >
			<Label text="Ship To Company" width="100%" />
					<ComboBox
						width="100%"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
            <VBox class="sapUiSmallMargin" width="30%" >
			<Label text="Ship To City" width="100%" />
					<ComboBox
						width="100%"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
		</HBox>
        <HBox >
			<VBox class="sapUiSmallMargin" width="30%" >
			<Label text="Ship To Contact" width="100%" />
					<ComboBox
						width="100%"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
			<VBox class="sapUiSmallMargin" width="30%" >
			<Label text="Ship To Country" width="100%" />
					<ComboBox
						width="100%"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
			<VBox class="sapUiSmallMargin" width="30%" >
			<Label text="Status" width="100%" />
					<ComboBox
						width="100%"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
            <VBox class="sapUiSmallMargin" width="30%" >
			<Label text="Shipment Type" width="100%" />
					<ComboBox
						width="100%"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
		</HBox>
    </VBox>
    <Toolbar >
        <ToolbarSpacer ></ToolbarSpacer>
            <Button text="Reset" press="onConsolidationFilterPopoverResetPress" ></Button>
            <Button text="Apply" press="onConsolidationFilterPopoverApplyPress" type="Success"></Button>
    </Toolbar>
	</Popover>
</core:FragmentDefinition>
