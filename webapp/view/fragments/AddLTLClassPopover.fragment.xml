<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    height="100%"
>
    <Popover
        id="idAddLTLClassPopover1"
        placement="Bottom"
        contentHeight="100%"
        showHeader="false"
        class="rightSidePopoverGare"
    >
        <!-- Custom Header -->
        <customHeader>
            <Toolbar>
                <!-- Title -->
                <Title text="Add LTL Class" />

                <!-- Spacer to push close button to the right -->
                <ToolbarSpacer />

                <!-- Close Button -->
                <Button
                    icon="sap-icon://decline"
                    class="Decline_Btn ship-now-decline_btn"
                    press="AddLTLClassClosePress" />
            </Toolbar>
        </customHeader>
        <footer>
            <OverflowToolbar class="p-sidebar-header">
                <Button
                    text="Cancel"
                    press="AddLTLClassCancelPress"
                />
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Save"
                    press="AddLTLClassSelectpress"
                />
            </OverflowToolbar>
        </footer>

        <content>
            <f:SimpleForm
                editable="true"
                class="customSimpleFormShadow"
                width="auto"
                layout="ColumnLayout"
                columnsM="2"
                columnsL="2"
                columnsXL="2"
            >
                <f:content>
                    <Label text="Location Name" />
                    <ComboBox class="sapUiSmallMarginBottom create-ship-req_input"  placeholder="Select">
                        </ComboBox>
                    <Label text="Ship Method" />
                    <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Select">
                    </ComboBox>
                    <Label text="LTL Class Code" />
                    <Input class="sapUiSmallMarginBottom create-ship-req_input"/>
                    <Label text="Status" />
                        <Switch state="true" >
				            <layoutData>
					            <FlexItemData growFactor="1" />
				            </layoutData>
			            </Switch>
                </f:content>
            </f:SimpleForm> 
        </content>
    </Popover>
</core:FragmentDefinition>
