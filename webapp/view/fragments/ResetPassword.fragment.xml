<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        draggable="true"
        id="ResetPasswordopenDialog"
        contentWidth="40%"
        contentHeight="20%" 
    >
     <customHeader>
        <Toolbar>
            <!-- Title -->
            <Title text="Reset Password" />
            
            <!-- Spacer to push close button to the right -->
            <ToolbarSpacer />

            <!-- Close Button -->
            <Button 
                icon="sap-icon://decline"
                 class="Decline_Btn ship-now-decline_btn"  
                press="ResetPasswordClosePress" />
        </Toolbar>
    </customHeader>
         <content>
           	<f:SimpleForm editable="true"
                           
                            width="auto"
							  layout="ColumnLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2">
					<f:content>
                        <Label text="SAP User ID" />  
			            <Input class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Enter SAP User ID"></Input>
                        
					</f:content>
				</f:SimpleForm>
               
        </content>
    
        <footer>
            <OverflowToolbar>
             <Button text="Cancel"></Button>
             <ToolbarSpacer ></ToolbarSpacer>
               <Button text="Reset Password"></Button>
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
