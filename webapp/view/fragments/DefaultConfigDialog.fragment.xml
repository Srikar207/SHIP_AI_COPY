<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        id="DefaultconfopenDialog"
        contentWidth="30%"
        contentHeight="26%" 
    >
     <customHeader>
        <Toolbar>
            <!-- Title -->
            <Title text="Default Configuration" />
            
            <!-- Spacer to push close button to the right -->
            <ToolbarSpacer />

            <!-- Close Button -->
            <Button 
                icon="sap-icon://decline" 
                 class="Decline_Btn ship-now-decline_btn" 
                press="onDefaultConfigurationClosePress" />
        </Toolbar>
    </customHeader>
        <f:SimpleForm id="SimpleFormChange480_12120Dual"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="12"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="2"
            singleContainerFullSize="false">
            <f:content>
                <Label text="Connect To" />
                <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" width="100%" />
                <Label text="Order Type" />
                <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" width="100%" />
                <Label text="Ship Method" />
                <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" width="100%" />
            </f:content>
        </f:SimpleForm>

        <footer>
            <OverflowToolbar>
                <Button text="Cancel" press="DefaultCancelDialog" />
                <ToolbarSpacer/>
                <Button type="Emphasized" text="Save" press="DefaultSaveDialog" />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
