<core:FragmentDefinition
     xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:ui="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
>
    <Dialog
        id="idAddCarrierConfigurationDialog"
        showHeader="false"
        contentWidth="100%"
        contentHeight="80%"
        class="myCustomDialog" >
        <customHeader>
            <Toolbar>
                <Title text="Add Carrier Configuration" />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://decline"
                    press=" AddCarrierConfigurationCloseDialog"
                    class="Decline_Btn ship-now-decline_btn btnInnerFocus"
                    type="Transparent"
                />
            </Toolbar>
        </customHeader>
<!-- <IconTabBar
		id="idIconTabBarNoIcons"
		expanded="false"
        enableTabReordering="true"
        class="shipNow-IconTabBar-Width">
		<items>
			<IconTabFilter text="Info" key="info">
				<Text text="Info content goes here ..." />
			</IconTabFilter>
			<IconTabFilter text="Attachments" key="attachments">
				<Text text="Attachments go here ..." />
			</IconTabFilter>
		</items>
	</IconTabBar> -->
        <IconTabBar
        expanded="true"
       selectedKey = "carrier" expandable="false" enableTabReordering="true" 
        class="shipNow-IconTabBar-Width customTabStyle" >
            <!-- Carrier Info Tab -->
            <items>
                <IconTabFilter
                    key="carrier"
                    text="Carrier Info" >
         <form:SimpleForm
                    id="carrierAccountsForm"
                    editable="true"
                    layout="ColumnLayout"
                    columnsM="2"
                    columnsL="3"
                    columnsXL="6">

                    <!-- Row 1 -->
                    <Label text="Location ID / Location Name" />
                    <ComboBox items="{eshipjetModel>/LocationsData}" selectedKey="{eshipjetModel>/carrierAccountsLocationId}" class="create-ship-req_input ">
                        <core:Item key="{eshipjetModel>Plant}" text="{eshipjetModel>Plant} - {eshipjetModel>PlantName}" />
                    </ComboBox>

                    <Label text="Account Number" />
                    <Input value="{eshipjetModel>/carrierAccountsAccountNumber}" class="create-ship-req_input " />

                    <Label text="Carrier Name" />
                    <Input value="{eshipjetModel>/carrierAccountsCarrierName}" showValueHelp="true" valueHelpRequest="onGetCarrierAccountValueHelpData" class="create-ship-req_input " />

                    <Label text="User ID" />
                    <Input value="{eshipjetModel>/carrierAccountsUserId}" class="create-ship-req_input " />

                     <Label text="Ship From Country" />
                    <ComboBox items="{eshipjetModel>/countriesList}" selectedKey="{eshipjetModel>/carrierAccountsShipFromCountryName}" class="create-ship-req_input ">
                        <core:Item key="{eshipjetModel>code}" text="{eshipjetModel>name}" />
                    </ComboBox>

                     <Label text="Password" />
                    <Input value="{eshipjetModel>/carrierAccountsPassword}" class="create-ship-req_input " />

                     <Label text="Ship To Country" />
                    <ComboBox items="{eshipjetModel>/countriesList}" selectedKey="{eshipjetModel>/carrierAccountsShipToCountryName}" class="create-ship-req_input ">
                        <core:Item key="{eshipjetModel>code}" text="{eshipjetModel>name}" />
                    </ComboBox>

                     <Label text="Access Key" />
                    <Input value="{eshipjetModel>/carrierAccountsAccessKey}" class="create-ship-req_input " />


                    <Label text="Carrier Type" />
                    <ComboBox selectedKey="{eshipjetModel>/carrierAccountsCarrierType}" class="create-ship-req_input ">
                        <core:Item key="FTL" text="FTL" />
                        <core:Item key="Generic" text="Generic" />
                        <core:Item key="LTL" text="LTL" />
                        <core:Item key="Parcel" text="Parcel" />
                        <core:Item key="TL" text="TL" />
                        <core:Item key="Other" text="Other" />
                    </ComboBox>

                    <!-- <Label text="Cost Center" />
                    <ComboBox selectedKey="{eshipjetModel>/carrierAccountsCostCentre}" class="create-ship-req_input ">
                        <core:Item key="Warehouse Cost Center" text="Warehouse Cost Center" />
                    </ComboBox> -->

                    <!-- <Label text="Environment" />
                    <ComboBox selectedKey="{eshipjetModel>/carrierAccountsEnvironment}" class="create-ship-req_input ">
                        <core:Item key="Test" text="Test" />
                        <core:Item key="Production" text="Production" />
                    </ComboBox> -->

                    <!-- Row 2 -->
                  
                    <Label text="Meter ID" />
                    <Input value="{eshipjetModel>/carrierAccountsMeterId}" class="create-ship-req_input " />

                    <Label text="Connection Type" />
                    <ComboBox selectedKey="{eshipjetModel>/carrierAccountsConnectionType}" class="create-ship-req_input ">
                        <core:Item key="API" text="API" />
                        <core:Item key="EDI" text="EDI" />
                        <core:Item key="FTP" text="FTP" />
                        <core:Item key="File" text="File" />
                    </ComboBox>

                    <Label text="Hub ID" />
                    <Input value="{eshipjetModel>/carrierAccountsHubId}" class="create-ship-req_input " />

                </form:SimpleForm>

                    
                        <Table
                            id="serviceTable"
                            items="{eshipjetModel>/carrierAccountsTableItems}" >
                            <columns>
                                <Column>
                                    <Text text="Service Name" />
                                </Column>
                                <Column>
                                    <Text text="ERP Service ID" />
                                </Column>
                                <Column>
                                    <Text text="Service Code" />
                                </Column>
                                <Column>
                                    <Text text="Service Coverage" />
                                </Column>
                                <Column>
                                    <Text text="Status" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem type="Inactive">
                                    <cells>
                                        <Input value="{eshipjetModel>ServDesc}" class="create-ship-req_input" />
                                        <Input value="{eshipjetModel>ErpServId}" class="create-ship-req_input" />
                                        <Input value="{eshipjetModel>ServCode}" class="create-ship-req_input" />
                                        <ComboBox class="create-ship-req_input" selectedKey="{eshipjetModel>ServiceCoverage}" >
                                            <core:Item key="Domestic" text="Domestic" />
                                            <core:Item key="International" text="International" />
                                        </ComboBox>
                                        <Switch state="{eshipjetModel>IsActive}" class="btnInnerFocus" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                            <!-- bound data rows -->
                            <!-- <items>
                                <ColumnListItem type="Active" press="onServiceRowPress">
                                    <cells>
                                        <Text text="{serviceName}" />
                                        <Text text="{erpServiceId}" />
                                        <Text text="{serviceCode}" />
                                        <Text text="{serviceCoverage}" />
                                    
                                    </cells>
                                </ColumnListItem>
                            </items> -->
                        </Table>
                </IconTabFilter>

                <!-- Additional Info Tab -->
                <IconTabFilter
                    key="additional"
                    text="Additional Info" >

                    <form:SimpleForm
                        editable="true"
                        layout="ColumnLayout"
                        columnsM="2"
                        columnsL="3"
                        columnsXL="6">
                        <form:content>

                            <Label text="Label Type" />
                            <ComboBox class="create-ship-req_input"
                                selectedKey="{eshipjetModel>/carrierAcntsLabelType}">
                                <core:Item key="" text="Select" />
                            </ComboBox>

                            <Label text="POD URL" />
                            <Input value="{eshipjetModel>/carrierAcntsPodUrl}" class="create-ship-req_input" />

                            <Label text="Rate URL" />
                            <Input value="{eshipjetModel>/carrierAcntsRateUrl}" class="create-ship-req_input" />

                            <Label text="" />
                            <CheckBox text="Rate Quote" selected="{eshipjetModel>/carrierAcntsRateQuote}" class="sapUiSmallMarginTop"/>

                            <Label text="Ship URL" />
                            <Input value="{eshipjetModel>/carrierAcntsShipUrl}" class="create-ship-req_input" />

                            <Label text="" />
                            <CheckBox text="Freight Quote" selected="{eshipjetModel>/carrierAcntsFreightQuote}" class="sapUiSmallMarginTop"/>

                            <Label text="Track URL" />
                            <Input value="{eshipjetModel>/carrierAcntsTrackUrl}" class="create-ship-req_input" />

                            <Label text="" />
                            <CheckBox text="End of Day" selected="{eshipjetModel>/carrierAcntsEndOfDay}" class="sapUiSmallMarginTop"/>

                            <Label text="Void URL" />
                            <Input value="{eshipjetModel>/carrierAcntsVoidUrl}" class="create-ship-req_input" />

                            <Label text="" />
                            <CheckBox text="Manual Rates" selected="{eshipjetModel>/carrierAcntsManualRates}" class="sapUiSmallMarginTop"/>

                            <Label text="Token URL" />
                            <Input value="{eshipjetModel>/carrierAcntsTokenUrl}" class="create-ship-req_input" />

                            <Label text="" />
                            <CheckBox text="Automate Pro Number" selected="{eshipjetModel>/carrierAcntsAutomaticProNum}" class="sapUiSmallMarginTop"/>

                        </form:content>
                    </form:SimpleForm>

                </IconTabFilter>
            </items>
        </IconTabBar>

        <footer>
            <Toolbar>
                <Button text="Cancel" press="AddCarrierConfigurationCancelDialog" class="AddCarrierCancel btnInnerFocus" />
                 <ToolbarSpacer />
                <Button text="Address" type="Emphasized" press="onAddressCarrierConfig" class="addCarrierSaveBtnStyle btnInnerFocus" />
                <Button text="Save"  press="AddCarrierConfigurationSaveDialog" class="addCarrierSaveBtnStyle btnInnerFocus"  visible="{eshipjetModel>/showCarrierAccountSaveBtn}" />
                 <Button  text="Update" press="AddCarrierConfigurationUpdateDialog" class="addCarrierSaveBtnStyle btnInnerFocus" width="auto"  visible="{eshipjetModel>/showCarrierAccountUpdateBtn}" />
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
