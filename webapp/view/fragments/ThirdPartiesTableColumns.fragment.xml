<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover  contentWidth="18%" placement="Left" contentHeight="30%" showArrow="false" >
		<customHeader>
			<VBox >
				<Toolbar class="toolbarbottomborder">
					<Title  class="sapUiTinyMarginBegin sapUiTinyMarginTop" text="Columns"></Title>
					<ToolbarSpacer ></ToolbarSpacer>					
					<Button icon="sap-icon://decline" press="onThirdPartiesColSelectClosePress" class="Decline_Btn ship-now-decline_btn" ></Button>
				</Toolbar>
				<SearchField placeholder="Search Columns" class="sapUiSmallMarginEnd sapUiTinyMarginBottom columnConfigSearch"  liveChange="onThirdPartiesColNameSearch"></SearchField>
			</VBox>
		</customHeader>
		<content>
        <Table	id="myThirdPartiesColumnSelectId" mode="MultiSelect" items="{path : 'eshipjetModel>/ThirdPartiesTableColumns'}" >
		<ColumnListItem id="_IDGenThirdPartiesColumnListItem1" vAlign="Middle">
			<cells>				
				<Text text="{eshipjetModel>label}" />				
			</cells>
		</ColumnListItem>
		<columns>
			<Column >
				<header>
					<Text text="Select All" />
				</header>
			</Column>			
		</columns>
        </Table>
        </content>
        <footer>
            <Toolbar >
                <ToolbarSpacer />
                <Button text="Apply" press="onThirdPartiesColSelectOkPress" type="Emphasized"></Button>               
            </Toolbar>
        </footer>      
	</Popover>   
</core:FragmentDefinition>